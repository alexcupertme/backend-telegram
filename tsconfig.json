{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"allowJs": true,
		"resolveJsonModule": true,
		"outDir": "./build",
		"removeComments": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"moduleResolution": "node",
		"rootDir": "./src",
		"baseUrl": "./src",
		"paths": {
			"@project/*": ["*"],
			"@entities/*": ["lib/entities/*"],
			"@schema": ["api/schema.ts"],
			"@utils/*": ["lib/utils/*"],
			"@library/*": ["lib/*"],
			"@api/*": ["api/*"],
			"@models/*": ["database/models/*"],
			"@responseSchema": ["lib/entities/response.entity.ts"],
			"@errorSchema": ["lib/entities/http-exception.entity.ts"],
			"@errorCodes": ["lib/entities/error-codes.entity.ts"]
		},
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["dom", "es7"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts", "build"]
}
